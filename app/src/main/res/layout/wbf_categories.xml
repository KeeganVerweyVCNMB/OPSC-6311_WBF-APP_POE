<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".wbf_categories">

    <ListView
        android:id="@+id/lstViewCat"
        android:layout_width="match_parent"
        android:layout_height="413dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!--(xml, s., M, P., Arputharaj, V. and Katz, A., 2021. )-->
    <ImageView
        android:id="@+id/imgWilliesCat"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-2dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/willies_landing_logo" />

    <TextView
        android:id="@+id/tvCatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:textStyle="bold|italic"
        android:text="Category View:" />

    <ProgressBar
        android:id="@+id/progressBarCat"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>