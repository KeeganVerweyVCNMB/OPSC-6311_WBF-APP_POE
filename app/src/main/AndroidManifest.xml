<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opsctask2app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OPSCTASK2APP">
        <activity android:name=".wbf_main">
            <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>

        </activity>

        <activity
            android:name=".wbf_forgot_password"
            android:parentActivityName=".wbf_login">
        </activity>

        <activity
            android:name=".wbf_add_item"
            android:parentActivityName=".wbf_dashboard">
        </activity>

        <activity
            android:name=".wbf_stock_cat_m"
            android:parentActivityName=".wbf_categories">
        </activity>

        <activity
            android:name=".wbf_item_view_m"
            android:parentActivityName=".wbf_categories">
        </activity>

        <activity
            android:name=".wbf_stock_cat"
            android:parentActivityName=".wbf_browse">
        </activity>

        <activity
            android:name=".wbf_item_view"
            android:parentActivityName=".wbf_browse">
        </activity>

        <activity
            android:name=".wbf_add_cat"
            android:parentActivityName=".wbf_dashboard">
        </activity>

        <activity
            android:name=".wbf_categories"
            android:parentActivityName=".wbf_dashboard">
        </activity>

        <activity
            android:name=".wbf_registration"
            android:parentActivityName=".wbf_main">
        </activity>

        <activity
            android:name=".wbf_login"
            android:parentActivityName=".wbf_main">
        </activity>

        <activity
            android:name=".wbf_browse"
            android:parentActivityName=".wbf_main">
        </activity>

        <activity
            android:name=".wbf_dashboard"
            android:parentActivityName=".wbf_login">
        </activity>

    </application>

</manifest>